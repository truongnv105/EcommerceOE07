<div class="container body">
  <div class="main_container">
    <div class="col-md-3 left_col">
      <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
          <%= link_to admin_dashboard_path, class: "site_title" do %>
            <i class="fa fa-paw"></i>
            <span><%= t ".admin_shop" %></span>
          <% end %>
        </div>
        <div class="clearfix"></div>
        <br />
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
          <div class="menu_section">
            <h3><%= t ".general" %></h3>
            <ul class="nav side-menu">
              <li>
                <%= link_to admin_dashboard_path do %>
                  <i class="fa fa-home"></i>
                  <%= t ".home" %>
                <% end %>
              </li>
              <li>
                <%= link_to admin_users_path do %>
                  <i class="fa fa-users"></i>
                  <%= t ".list_users" %>
                <% end %>
              </li>
              <li>
                <%= link_to admin_categories_path do %>
                  <i class="fa fa-list-alt"></i>
                  <%= t ".list_categories" %>
                <% end %>
              </li>
              <li>
                <a><i class="fa fa-plus"></i> <%= t ".addtion" %> <span class="fa fa-chevron-down"></span></a>
                <ul class="nav child_menu">
                  <li>
                    <%= link_to t(".add_product"), new_admin_product_path %>
                  </li>
                  <li>
                    <%= link_to t(".add_categories"), new_admin_category_path %>
                  </li>
                </ul>
              </li>
              <li>
                <a><i class="fa fa-list"></i> <%= t ".categories" %> <span class="fa fa-chevron-down"></span></a>
                <ul class="nav child_menu">
                  <% @categories_menu.each do |cate_menu| %>
                    <li><%= link_to cate_menu.name.upcase, admin_category_path(cate_menu) %></li>
                  <% end %>
                </ul>
              </li>
              <li>
                <%= link_to admin_orders_path do %>
                  <i class="fa fa-list-alt"></i>
                  <%= t ".list_orders" %>
                <% end %>
              </li>
            </ul>
          </div>
          <div class="menu_section">
            <h3><%= t ".live_on" %></h3>
            <ul class="nav side-menu">
              <li>
                <%= link_to admin_logout_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>
                  <%= t ".logout" %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="right_col">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
    <div class="top_nav">
      <div class="nav_menu">
        <nav>
          <div class="nav toggle">
            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li class="">
              <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <%= current_user_admin.name %>
                <span class=" fa fa-angle-down"></span>
              </a>
              <ul class="dropdown-menu dropdown-usermenu pull-right">
                <li>
                  <%= link_to admin_logout_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i> <%= t "logout" %>
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

<%= form_for [product, comment], remote: true do |f| %>
  <%= hidden_field_tag :parent_id, 0, class: "hidden-parent" %>
  <%= f.label :content, t("content") %>
  <%= f.text_area :content, required: true, placeholder: t("type_comment"),
    class: "form-control comment-text-area" %>
  <%= f.file_field :picture %>
  <%= f.submit t("create"), class: "btn btn-primary" %>
<% end %>
